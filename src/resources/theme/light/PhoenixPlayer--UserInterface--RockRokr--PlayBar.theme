#PlayBar {
    background-color: qlineargradient(x1:0, y1:0, x2:0.8, y2:1,
                                    stop:0 #FFFFFF,
                                    stop: 0.6 #F3F3F3,
                                    stop:1 #FFFFFF);
    border: none;

}
#RKCover {
    margin: 0px;
    padding: 0px;
    border: none;
    border-radius: 4px;
    qproperty-radius: 4;
}

#RKTitle {
    font-size: 16px;
    font-weight: bold;
    color: #19202C;
    background: red;
}
#RKArtist {
    font-size: 12px;
    color: rgba(25, 32, 44, 0.5);
    background: transparent;
}

#RKPlayedTime {
    font-size: 16px;
    font-weight: bold;
    color: #19202C;
    background: red;
}

#RKTotalTime {
    font-size: 12px;
    color: rgba(25, 32, 44, 0.5);
    background: transparent;
}

/***** start repeat btn ********/

    /***** repeat disable ********/
    #RKRepeatBtn {
      border-image: url(:/light/image/repeat_disable.svg);
      background: transparent;
    }

    #RKRepeatBtn:hover {
      border-image: url(:/light/image/repeat_disable_hover.svg);
      background: transparent;
    }

    /***** repeat one ********/
    #RKRepeatBtn[PlayMode="PlayModeRepeatCurrent"] {
      border-image: url(:/light/image/repeat_one.svg);
      background: transparent;
    }

    #RKRepeatBtn:hover[PlayMode="PlayModeRepeatCurrent"] {
      border-image: url(:/light/image/repeat_one_hover.svg);
      background: transparent;
    }

    /***** repeat all ********/
    #RKRepeatBtn[PlayMode="PlayModeRepeatAll"] {
      border-image: url(:/light/image/repeat_all.svg);
      background: transparent;
    }

    #RKRepeatBtn:hover[PlayMode="PlayModeRepeatAll"] {
      border-image: url(:/light/image/repeat_all_hover.svg);
      background: transparent;
    }

/***** end repeat btn ********/

